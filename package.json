{
  "name": "electron-react-webpack",
  "version": "1.0.1",
  "description": "Electron + React 16 + Webpack 4 template.",
  "repository": "https://github.com/Jackie-Tang/electron-react.git",
  "main": "main.js",
  "build": {
    "asar": false,
    "productName": "agroa",
    "appId": "org.jackie.agroa",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Jackie-Tang",
        "repo": "electron-react"
      }
    ],
    "files": [
      "build/**/*",
      "main.js",
      "index.html",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "scripts": {
    "bundle": "webpack --mode development",
    "serve": "electron .",
    "serve-dev": "rimraf build && wait-on build/bundle.js && electron .",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel bundle serve-dev",
    "build": "cross-env NODE_ENV=production webpack --mode development",
    "build:mac": "npm run build && electron-builder --mac --publish=always",
    "package:mac": "npm run build && electron-builder --publish=always",
    "build:win": "npm run build && electron-builder --win --x64"
  },
  "author": "Jackie<173.16340417@163.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^6.0.3",
    "css-loader": "^0.28.10",
    "electron": "10.2.0",
    "electron-builder": "22.10.5",
    "electron-reload": "^1.2.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.10",
    "npm-run-all": "^4.1.2",
    "rimraf": "^3.0.0",
    "wait-on": "^3.3.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.1.1"
  },
  "dependencies": {
    "agora-access-token": "^2.0.4",
    "agora-electron-sdk": "3.3.1",
    "electron-log": "^4.3.2",
    "electron-updater": "^4.3.8",
    "inline-worker": "^1.1.0",
    "node-sass": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0"
  },
  "agora_electron": {
    "electron_version": "10.2.0",
    "prebuilt": true
  }
}
